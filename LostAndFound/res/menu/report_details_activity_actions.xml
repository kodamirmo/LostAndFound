<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android" 
     xmlns:app="http://schemas.android.com/apk/res-auto" >

     <!-- Alert, should appear as action button -->
    <item
        android:id="@+id/action_alert"
        android:icon="@drawable/bell"
        android:title="@string/alertLbl" 
        app:showAsAction="always"/>
    <!-- Share, should appear as action button -->
    <item
        android:id="@+id/action_share"
        android:icon="@drawable/share_white"
        android:title="@string/share" 
        app:showAsAction="always"/>
    <!-- Resolve, should appear as action button -->
    <item
        android:id="@+id/action_resolve"
        android:icon="@drawable/checked"
        android:title="@string/report_resolve"
        app:showAsAction="always"/>

    <!-- Settings, should appear as action button -->
    <item
        android:id="@+id/action_settings"
        android:icon="@drawable/ic_action_settings"
        android:title="@string/action_settings"
        app:showAsAction="never"/>

</menu>