<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageUserDetail1"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/user" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/lineardetailP3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textActivityUserNameDetail1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="open-sans"
                    android:text="@string/userName"
                    android:textColor="#656565"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userMsgLargeDetail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:fontFamily="open-sans"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/userMsgLarge"
                    android:textColor="#656565"
                    android:textSize="14sp"
                    android:typeface="sans" >
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/textActivityTimeDetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/lineardetailP3"
                android:layout_alignTop="@+id/lineardetailP3"
                android:layout_marginRight="9dp"
                android:layout_marginTop="10dp"
                android:fontFamily="open-sans"
                android:text="@string/postTime"
                android:textColor="#B71C4E"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/border_top_bottom_gray"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#656565" />
    </android.support.v4.view.ViewPager>

</LinearLayout>