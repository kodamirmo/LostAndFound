<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".RegisterActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lblRegister"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="open-sans"
                android:paddingTop="16dp"
                android:text="@string/lblRegister"
                android:textColor="#3A3A3A"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserName"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserName" 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserSex"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerUserSex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:inputType="text" />

        <Button
            android:id="@+id/btnUserBirthday"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:fontFamily="open-sans"
            android:gravity="left|center_vertical"
            android:paddingLeft="6dp"
            android:text="@string/lblRegisterUserBirthday"
            android:textColor="#999599"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserMail"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserMail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserCountry"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserCountry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserCity"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="text"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserPass"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="textPassword"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserRePass"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUserPassConf" 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_and_border_white_editext"
            android:inputType="textPassword"
            android:padding="4dp"
            android:textColor="#999599" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="open-sans"
            android:text="@string/lblRegisterUserPic"
            android:textColor="#3A3A3A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgViewUserPic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/lblRegisterUserPic"
                android:scaleType="fitCenter"
                android:baselineAlignBottom="true"
                android:src="@drawable/unknown_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btnTakePhotoRegister"
                    android:layout_width="68dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/corner_round_btn_light_gray"
                    android:contentDescription="@string/reportPetReportTakePic_lbl"
                    android:src="@drawable/cam_gray" />

                <ImageButton
                    android:id="@+id/btnSelectPhotoRegister"
                    android:layout_width="68dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_round_btn_light_gray"
                    android:contentDescription="@string/reportPetReportSelectPic_lbl"
                    android:src="@drawable/gallery" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="open-sans"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/registerTerms"
            android:textColor="#999599"
            android:textColorLink="#B71C4E"
            android:textSize="13sp" />
    </LinearLayout>

</ScrollView>