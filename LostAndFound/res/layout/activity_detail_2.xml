<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/linearTypePostDetail2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/detail_chart_green"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageTypePostHomeDetail2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@string/report"
                        android:src="@drawable/home_ico" />

                    <TextView
                        android:id="@+id/textActivityTypePostHomeDetail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="open-sans"
                        android:text="@string/report_home"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageArrowDownDetail2"
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/linearTypePostDetail2"
                    android:layout_alignTop="@+id/linearTypePostDetail2"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@string/report"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_dark_gray"
                android:orientation="horizontal"
                android:padding="10dp"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.33"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="255dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/dog_icon"
                        android:drawablePadding="4dp"
                        android:text="@string/dog_label"
                        android:textColor="#656565"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reportDate_title"
                        android:textColor="#B4B4B4"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_date"
                        android:textColor="#656565"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:paddingLeft="8dp" >

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="@string/reportPetName_lbl"
                        android:textColor="#B4B4B4"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknown"
                        android:textColor="#656565"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reportPetAge_lbl"
                        android:textColor="#B4B4B4"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_aproxAge"
                        android:textColor="#656565"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:paddingLeft="8dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reportPetCaracteristics_lbl"
                        android:textColor="#B4B4B4"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:text="@string/reportPetCaracteristics_txt"
                        android:textColor="#656565"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineardetailMsgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_gray"
                android:minHeight="60dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageUserdetailMsgs"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/user2" />

                <RelativeLayout
                    android:id="@+id/relativedetailMsgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <LinearLayout
                        android:id="@+id/lineardetailMsgs2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textActivityUserNamedetailMsgs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="open-sans"
                            android:text="@string/user2Name"
                            android:textColor="#656565"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/userMsgs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="#00000000"
                            android:ems="10"
                            android:enabled="false"
                            android:focusable="false"
                            android:fontFamily="open-sans"
                            android:inputType="textMultiLine"
                            android:lineSpacingExtra="0dp"
                            android:paddingBottom="8dp"
                            android:text="@string/user2Msg"
                            android:textColor="#656565"
                            android:textSize="14sp"
                            android:typeface="sans" >
                        </EditText>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textActivityTimedetailMsgs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/lineardetailMsgs2"
                        android:layout_alignTop="@+id/lineardetailMsgs2"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="open-sans"
                        android:text="@string/postTime2"
                        android:textColor="#B71C4E"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_gray"
                android:paddingBottom="15dp"
                android:stretchColumns="1" >

                <ImageView
                    android:id="@+id/imageUserdetailMsgS"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textActivityUserNamedetailMsgS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="open-sans"
                        android:text="@string/userName"
                        android:textColor="#656565"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/userNewMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittexts_borders_gray"
                        android:ems="13"
                        android:fontFamily="open-sans"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="0dp"
                        android:maxWidth="200dp"
                        android:minHeight="40dp"
                        android:padding="2dp"
                        android:textColor="#656565"
                        android:textSize="14sp"
                        android:typeface="sans" >
                    </EditText>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageSendNewMsg"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/corner_round_btn_light_gray"
                    android:contentDescription="@string/app_name"
                    android:padding="20dp"
                    android:src="@drawable/checked_gray" />
            </TableRow>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>